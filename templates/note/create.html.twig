{% extends 'base.html.twig' %}
{% block title %}Create a Secure Note to share with anyone - securenote.ca{% endblock %}


{% block recaptchascript %}<script src="https://www.google.com/recaptcha/api.js?render={{ GOOGLE_RECAPTCHA_SITE_KEY }}"></script>{% endblock %}
{% block envvariables %}<meta name="GOOGLE_RECAPTCHA_SITE_KEY" value="{{ GOOGLE_RECAPTCHA_SITE_KEY }}">{% endblock %}

{% block body %}
<div class="container" id="container-note-create">
    <div class="row">
        <div class="col">
            
            
            <form id="form-note-create">


            <div class="alert alert-warning saved-link-display" role="alert" style="display:none">
                
                <div class="d-lg-flex flex-column flex-md-row justify-content-between">
                    <span class="align-self-center"><strong>Link: </strong></span>

                    <span class="align-self-center" id="saved-link"></span>

                    <div class="copy-saved-link-container">
                        <input type="text" value="..." id="saved-link-to-copy" class="visually-hidden">
                        <div class="nbtooltip mt-2 mt-md-0">
                            <button class="cpy-from btn btn-primary" data-inputpath="#saved-link-to-copy" >
                                <span class="tooltiptext">Copy Link to clipboard</span>
                                <span class="tooltiptext-upon-copy" style="display:none">Copied!</span>
                                Copy Link
                            </button>
                        </div>
                    </div>

                </div>

                <div id="saved-note-tips" class="mt-3 d-md-flex flex-column flex-md-row justify-content-center"></div>

            </div>


            <div class="alert alert-warning status-updates" role="alert" style="display:none"></div>




            <div id="create-form-controls"  class="content-block">
                <h1>New Note</h1>
                <div class="form-row d-flex align-items-center mb-3">
                    <div class="form-group ">
                        <label for="ttl">Maximum Days to Live (if not deleted sooner)</label>
                        <input type="number" class="form-control" name="ttl" id="ttl" min="1" max="30" width="4em" value="30" placeholder="1 to 30 days" required>
                    </div>
                    <div class="fform-group ps-5 pt-3 d-flex align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="destroy-on-read" id="destroy-on-read" checked>
                            <label class="form-check-label" for="destroy-on-read">
                                Destroy on read
                            </label>
                        </div>
                    </div>

                    <div class="fform-group ps-5 pt-3 mr-auto d-flex align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="allow-delete" id="allow-delete" disabled>
                            <label class="form-check-label" for="allow-delete">
                                Allow Manual Deletion
                            </label>
                        </div>
                    </div>
                </div>
                
                <div class="form-row d-flex align-items-center  mb-3">
                    <div class="form-group col-12" >
                        <label for="secretnote">Note to secure</label>
                        <textarea class="form-control autogrow" name="secretnote" id="secretnote" rows="5" required></textarea>
                    </div>
                </div>


                <button type="submit" class="btn btn-primary">Create</button>
            </div>


            <!-- <button type="button" class="btn btn-primary mt-4" id="create-a-new-note" style="display:none">Create A New Secret Note</button> -->

            </form>




        </div>
    </div>
</div>

{% endblock %}